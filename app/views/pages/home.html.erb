<!-- begin row 1 -->
<div class="row">
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-image hide-panel-body rounded-img">
            	<div style="position: relative; left: 0; top: 0;">
               <img src="/landscape.png" class="panel-image-preview ">
			   <img class="rounded-border" src="/logo_sg.png" height="70px" width="70px" style="position: absolute; top: 80%; left: 5%;"/>
			   </div>
            </div>
			<div class="panel-footer text-center" style="background:white">
				<div class="row">
					<div class="panel-body row" style="margin-bottom=12px;margin-left:50px" >
				<p class="p-small" style="margin-right:50px;margin-top:-10px">GeekCraft</p>
				<p class="p-small post-creation" style="margin-right:50px">@<%=current_user.username%></p>
				
				</div>
				</div>
				<div class="row" style="text-align: left">
					<div class="col-xs-6">
						<p class="p-small post-creation">Tweets</p>
						<p class="p-small p-big-blue">64</p>
						</div>
					<div class="col-xs-6">
						<p class="p-small post-creation">Followers</p>
						<p class="p-small p-big-blue">15</p>
					</div>
			</div>
			
			</div>
				
        </div>
        
         <div class="panel panel-default">
            <div class="panel-body">
                <p>Trends</p>
				<% for i in 0..7 %>
				<a href="">#MyTrends<%= i*i %> </a>
				<p class="post-creation"><%= i*i %> teweets</p>
				<% end %>
			
	
				
				
            </div>
        </div>
        
    </div>
   <div class="col-xs-6">
   	 <div class="panel panel-default post-panel">
   	 	<div class="panel-body row" style="margin-bottom=12px;" >
   		<%= render 'posts/post_form'%>
		</div>
		</div>
         <% for @p in @posts %>
            <div class="panel panel-default post-panel">
                <div class="panel-body row">
                	<div class="col-sm-1" ">
                		<img src="logo_sg.png" width="35px" height="35px"></img>
                	</div>
					<div class="col-sm-11 row">
						<p class="post-title">
							<span class="post-owner">@<%= User.find(@p.user_id).username %></span>
							<span class="post-creation">-<%=@p.created_at.to_formatted_s(:short)%></span>
						</p>
                		 <p class="post-content"><%= @p.content %></p>
                	</div>	
					<div class="col-sm-12">
						<p class="post-links ">
							<span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span>
							<span class="glyphicon glyphicon-retweet g-links" aria-hidden="true"></span>
							<span class="glyphicon glyphicon-heart g-links" aria-hidden="true"></span>
							<span class="glyphicon glyphicon-option-horizontal g-links" aria-hidden="true"></span>
							<span class="post-view-conversation"><a href="">view convertation</a></span>
						</p>
                	</div>
				
                </div>
            </div>
        <% end %>
		<div class="panel panel-default post-panel">
            <div class="panel-body row">
                <div class="col-sm-12" ">
					<center>
						<img src="/bird.png" height="20px" width="30px"></img>
						<a href="#top"><p class="opacity: .7;">
							
							Back to Top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
						</a></p>
					</center>
				</div>
			</div>	
		</div>
		
    </div>
    <div class="col-xs-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <p style="opacity:0.5;font-size: 90%">About   Help   Blog  Status @ 2016 GeekCraft</p>
				
        </button>
            </div>
        </div>
        
    </div>
</div>


    